@model PresentationLayer.Models.Product.UpdateProduct

@{
    ViewData["Title"] = "Edit";
    IEnumerable<DataLayer.Entities.Category> categories = ViewBag.Categories;
    IEnumerable<DataLayer.Entities.Sale> sales = ViewBag.Sales;
}


<h4>Sửa sản phẩm</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data" id="formUpdate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" class="form-control" value="@Model.Id" hidden />
            <div class="form-group">
                <label asp-for="ProductName" class="control-label">Tên sản phẩm</label>
                <input asp-for="ProductName" class="form-control" value="@Model.ProductName" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <label asp-for="Prices" class="control-label">Giá</label>
                <input asp-for="Prices" asp-format="{0:#,###.00}" value="@Model.Prices" type="number" class="form-control" />
                <span asp-validation-for="Prices" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <label asp-for="Count" class="control-label">Số lượng</label>
                <input asp-for="Count" class="form-control" type="number" value="@Model.Count" />
                <span asp-validation-for="Count" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <label asp-for="EndDate" class="control-label">Ngày hết hạn</label>
                <input asp-for="EndDate" class="form-control" type="date" value="@Model.EndDate.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <label for="CategoryId">Chọn loại sản phẩm:</label>
                <select name="CategoryId" id="CategoryId">
                    @foreach (var item in categories)
                    {
                        @if (item.Id == Model.CategoryId)
                        {
                            <option selected value="@item.Id">@item.CategoryName</option>
                        }
                        else
                        {
                            <option value="@item.Id">@item.CategoryName</option>
                        }
                        
                    }
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <label for="SaleId">Chọn giảm giá:</label>
                <select name="SaleId" id="SaleId">
                    @foreach (var item in sales)
                    {
                        @if (item.Id == Model.SaleId)
                        {
                            <option selected value="@item.Id">@item.percentSale %</option>
                        }
                        else
                        {
                            <option value="@item.Id">@item.percentSale %</option>
                        }

                    }
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <label for="imgFile" class="control-label">Ảnh sản phẩm</label>
                <input accept="image/*" type='file' name="imgFile" id="imgFile" />
                <img id="blah" src="@Model.Image" width="300" height="300" />
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Cập nhật" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Quay lại danh sách</a>
</div>

<script>
    const imageFile = document.getElementById('imgFile');
    imageFile.onchange = (evt) => {
        document.getElementById('blah').src = URL.createObjectURL(evt.target.files[0]);
    }

    document.getElementById('formUpdate').onsubmit = (evt) => {
        if (!document.getElementById('blah').src) {
            evt.preventDefault();
            alert('Vui lòng thêm ảnh sản phẩm');
        };
    }
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
